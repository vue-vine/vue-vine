{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "composite": true,
    "declaration": true,
    "strict": true,
    "alwaysStrict": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./",
    "paths": {
      "@html1/language-server": [
        "packages/language-server/src"
      ]
    },
    "outDir": "out",
    "rootDir": "src"
  },
  "include": [
    "src"
  ]
}
