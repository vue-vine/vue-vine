// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "debug:ext",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "problemMatcher": [
        {
          "base": "$tsc",
          "applyTo": "closedDocuments",
          "fileLocation": "absolute",
          "severity": "error",
          "background": {
            "activeOnStart": true,
            "beginsPattern": "Build start",
            "endsPattern": "Build complete"
          }
        }
      ],
      "group": "build"
    }
  ]
}
