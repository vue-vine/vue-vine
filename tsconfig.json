{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "lib": ["ES2023"],
    "customConditions": ["vine"],
    "module": "Preserve",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": true,
    "isolatedDeclarations": true,
    "skipLibCheck": true
  },
  "include": [
    "packages",
    "types",
    "tsdown.config.ts"
  ],
  "exclude": [
    "**/dist",
    "packages/nuxt-module",
    "packages/e2e-test",
    "packages/create-vue-vine/template",
    "packages/e2e-test/src/*.vine.ts"
  ]
}
