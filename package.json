{
  "name": "vue-vine-workspace",
  "private": true,
  "description": "Yet another style to write Vue.js components",
  "author": "ShenQingchuan",
  "license": "MIT",
  "scripts": {
    "play": "pnpm --filter @vue-vine/playground run dev",
    "dev": "cross-env NODE_ENV=development esno scripts/run-build.js --dev",
    "build": "cross-env NODE_ENV=development esno scripts/run-build.js",
    "ext:dev": "cross-env NODE_ENV=development esno scripts/ext-dev.js dev",
    "ext:build": "cross-env NODE_ENV=production esno scripts/ext-dev.js build",
    "test": "pnpm --filter @vue-vine/compiler run test",
    "test:e2e": "pnpm --filter @vue-vine/e2e-test run test",
    "lint": "eslint . --cache",
    "lint:fix": "pnpm lint --fix",
    "docs:dev": "pnpm --filter vue-vine-docs run dev",
    "docs:build": "pnpm --filter vue-vine-docs run build",
    "docs:preview": "pnpm --filter vue-vine-docs run preview",
    "postinstall": "simple-git-hooks",
    "clean": "esno scripts/clean.js",
    "clean:deps": "esno scripts/clean-deps.js && node scripts/clean-root-deps.js",
    "update:deps": "esno scripts/update-deps.js"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.38.6",
    "@baiwusanyu/utils-log": "^1.0.13",
    "cross-env": "^7.0.3",
    "del": "^7.0.0",
    "eslint": "^8.42.0",
    "esno": "^0.16.3",
    "lint-staged": "^13.2.2",
    "nx": "16.2.2",
    "nx-cloud": "latest",
    "shelljs": "^0.8.5",
    "simple-git-hooks": "^2.8.1",
    "tslib": "^2.5.3",
    "typescript": "^5.1.3",
    "vitest": "^0.31.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm esno scripts/pre-commit.js"
  },
  "lint-staged": {
    "*": "eslint . --fix --cache"
  }
}
